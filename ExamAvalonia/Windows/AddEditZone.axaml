<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ExamAvalonia.Windows.AddEditZone"
        Title="AddEditZone">
  <Grid RowDefinitions="Auto * Auto" Margin="10">

        <TextBlock x:Name="TitleText" Text="Add Zone" FontSize="20" Margin="0 0 0 10"/>

        <Grid Grid.Row="1" RowDefinitions="Auto Auto" ColumnDefinitions="100 *" RowSpacing="10" ColumnSpacing="10">
            <TextBlock Text="Code:"/>
            <TextBox x:Name="CodeBox" Grid.Column="1"/>

            <TextBlock Text="Description:" Grid.Row="1"/>
            <TextBox x:Name="DescriptionBox" Grid.Row="1" Grid.Column="1"/>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0 10 0 0">
            <Button Content="Save" Width="100" Click="Save_Click"/>
            <Button Content="Cancel" Width="100" Click="Cancel_Click"/>
        </StackPanel>

    </Grid>
</Window>

<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ExamAvalonia.Windows.AddEditSupplier"
        Title="AddEditSupplier">
  <Grid RowDefinitions="Auto * Auto" Margin="10">

        <TextBlock x:Name="TitleText" Text="Add Supplier" FontSize="20" Margin="0 0 0 10"/>

        <Grid Grid.Row="1" RowDefinitions="Auto Auto Auto Auto" ColumnDefinitions="120 *" RowSpacing="10" ColumnSpacing="10">
            <TextBlock Text="Name:"/>
            <TextBox x:Name="NameBox" Grid.Column="1"/>

            <TextBlock Text="Phone:" Grid.Row="1"/>
            <TextBox x:Name="PhoneBox" Grid.Row="1" Grid.Column="1"/>

            <TextBlock Text="Contact Person:" Grid.Row="2"/>
            <TextBox x:Name="ContactBox" Grid.Row="2" Grid.Column="1"/>

            <TextBlock Text="Email:" Grid.Row="3"/>
            <TextBox x:Name="EmailBox" Grid.Row="3" Grid.Column="1"/>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0 10 0 0">
            <Button Content="Save" Width="100" Click="Save_Click"/>
            <Button Content="Cancel" Width="100" Click="Cancel_Click"/>
        </StackPanel>

    </Grid>
</Window>